<%= sidebar_sections :audio_player, :events, :news %>

<div class="content">
  <% @images.in_groups_of(3) do |group| %>
    <div class="gallery-row">
      <% group.each do |image| %>
        <% if image %>
          <%= link_to image_tag(image.thumb, alt: image.label), image.full, title: image.label, class: 'fancybox image-thumb', data: {:'fancybox-group' => 'gallery'} %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
