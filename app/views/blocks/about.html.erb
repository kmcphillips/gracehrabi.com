<%= sidebar_sections :audio_player, :events, :news %>

<div class="content">
  <div class="post">
    <h1>About Grace</h1>
    <h3>&nbsp;</h3>
    <%= simple_format @block.body %>
    <%= obfuscated_mail_to(Settings.site_email, "Grace Hrabi") %>
    <%= link_to "Site", "http://github.com/kmcphillips/gracehrabi.com" %>
    by
    <%= link_to 'Kevin McPhillips', 'http://kevinmcphillips.ca' %>
    and
    <%= link_to 'Lisa Rae Swan', 'http://lisaraeswan.com/' %>
  </div>

  <div class="post">
    <h1>Collaborators</h1>
    <h3>&nbsp;</h3>
    <ul class="links">
      <% @links.each do |link| %>
        <li>
          <p class="link">
            <%= link_to link.display, link.url %>
          </p>
          <%= simple_format(link.description) unless link.description.blank? %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
