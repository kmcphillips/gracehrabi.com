<%= pjax_layout do %>
  <div class="post">
    <h1>About Grace</h1>
    <h3>&nbsp;</h3>
    <%= simple_format @block.body %>
    <p>
      <%= obfuscated_mail_to(Settings.site_email) %>
    </p>
  </div>

  <div class="post">
    <h1>Collaborators</h1>
    <ul class="links">
      <% @links.each do |link| %>
        <li>
          <p class="link">
            <%= link_to link.display, link.url %>
          </p>
          <%= simple_format(link.description) unless link.description.blank? %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="post">
    <h1>Credits</h1>
    <%= link_to "Website", "http://github.com/kmcphillips/gracehrabi.com" %>
    by
    <%= link_to 'Kevin McPhillips', 'http://kevinmcphillips.ca' %>
    and
    <%= link_to 'Denise Spiessens', 'https://twitter.com/speezyD' %>
  </div>
<% end %>
