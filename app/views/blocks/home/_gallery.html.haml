- content_for :js do
  :javascript
    $(document).ready(function(){
      $('#video_modal').dialog({
        autoOpen: false,
        buttons: { "Close": function() { $(this).dialog("close").html(''); } },
        modal: true,
        width: 670
      });
    });

    window.launchVideo = function(){
      html = "<iframe width=\"640\" height=\"480\" src=\"//www.youtube.com/embed/5nEUrQTipyE?rel=0&autoplay=1\" frameborder=\"0\" allowfullscreen></iframe>";

      $('#video_modal').html(html).dialog('open');
    }

.post
  %h1 Image Galleries 
  %h3 &nbsp;
  
  .center
    - @images.each do |image|
      = link_to image_tag(image.thumb, class: "thumb_tight", alt: image.label), gallery_path

  .center
    %a{onclick: "window.launchVideo()"}= image_tag "video_preview1.png"
    #video_modal{style: "display: none"}
