= form_for([:admin, @block]) do |f|
  - if @block.errors.any?
    #error_explanation
      %h2
        = pluralize(@block.errors.count, "error") 
        prohibited this block from being saved:

      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    %br
    = f.text_area :body

  .field
    = f.label :label
    %br
    = f.text_field :label

  .field
    = f.label :path
    %br
    = f.text_field :path

  .actions
    = f.submit
