%h1 Login

= form_tag admin_sessions_path, :method => :post do
  - if flash[:error]
    #error_explanation
      %h2 Username or password incorrect.


  .field
    %label
      Username
      = text_field_tag :username

  .field
    %label
      Password
      = password_field_tag :password

  .actions
    = submit_tag "Login"
