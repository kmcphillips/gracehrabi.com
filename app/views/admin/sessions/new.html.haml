%h1 Login

= form_tag admin_sessions_path, :method => :post do
  - unless flash[:error].blank?
    #error_explanation
      %h2 Username or password incorrect.

      %ul
        %li= flash[:error]

  .actions
    %label
      Username
      = text_field_tag :username

    %label
      Password
      = text_field_tag :password
    
    = submit_tag "Login"
