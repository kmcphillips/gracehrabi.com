= form_for [:admin, @post] do |f|
  = error_messages(@post)
  
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  - if f.object.permalink
    .field
      = f.label :permalink
      = f.object.permalink

  .actions
    = f.submit 'Save'
    = f.submit 'Preview'
