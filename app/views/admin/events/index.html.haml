%h1 Shows

.image_links
  = new_entity_image new_admin_event_path, "Create New Event"

= collection_index @events, ["Title", "Status", "Publicized?", "Starts at", "Actions"] do |event|
  %tr{:class => row_class}
    %td= event.title
    %td= event.status
    %td= boolean_image(event.publicized?)
    %td= event.starts_at.to_formatted_s(:index)
    %td
      = edit_entity_image [:edit, :admin, event]
      = destroy_entity_image [:admin, event]
      = copy_entity_image new_admin_event_path(:source => event.id)
