%h1 Listing events

%table
  %tr
    %th Title
    %th Description
    %th Stars at
    %th Ends at
    %th Actions
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.description
      %td= event.stars_at
      %td= event.ends_at
      %td
        = link_to 'Show', [:admin, event]
        = link_to 'Edit', edit_admin_event_path(event)
        = link_to 'Destroy', [:admin, event], :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Event', new_admin_event_path
