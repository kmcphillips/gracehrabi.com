= form_for [:admin, @event], :html => { :multipart => true } do |f|
  = error_messages(@event)

  .field
    = f.label :title
    = f.text_field :title, :size => 40
  .field
    = f.label :description
    = f.text_area :description, :rows => 12, :cols => 50
  .field
    = f.label :publicized, "Email notify?"
    = f.check_box :publicized
  .field
    = f.label :starts_at
    #starts_at_container.date= f.datetime_select :starts_at
  .field
    = f.label :price
    $
    = f.text_field :price, size: 6

  = f.image

  .actions
    %label Actions
    = f.submit 'Save'
    = f.submit 'Preview'
