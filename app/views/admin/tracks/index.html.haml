%h1 Media Player Tracks

= collection_index @tracks, ["Title", "Description", "Recorded at", "Filename", "Active?", "Actions"] do |track|
  %tr{:class => cycle("odd", "even")}
    %td= track.title
    %td= track.description
    %td= track.recorded_at
    %td= link_to track.mp3.name, track.mp3.url
    %td= boolean_image track.active?
    %td
      = show_entity_image [:admin, track]
      = edit_entity_image [:edit, :admin, track]
      = destroy_entity_image [:admin, track]

%br

= link_to 'New Track', new_admin_track_path
