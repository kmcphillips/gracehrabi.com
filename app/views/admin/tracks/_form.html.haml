= form_for [:admin, @track], :url => admin_tracks_path do |f|
  -if @track.errors.any?
    #error_explanation
      %h2= "#{pluralize(@track.errors.count, "error")} prohibited this admin_track from being saved:"
      %ul
        - @track.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :recorded_at
    = f.date_select :recorded_at
  - if f.object.sort_order
    .field
      = f.label :sort_order
      = f.object.sort_order
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :mp3, "Audio File"
    = f.file_field :mp3
    

  .actions
    = f.submit 'Save'
